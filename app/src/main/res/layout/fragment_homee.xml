<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:backgroundTint="#F5F5F5"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Top Profile Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/buttonColor">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:contentDescription="Profile Image"
                android:src="@drawable/account" />

            <!-- User Greeting -->
            <TextView
                android:id="@+id/userGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hello, Good Morning"
                android:textColor="@color/backgroundColor"
                android:textSize="16sp" />

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:contentDescription="Notifications"
                android:src="@drawable/notification" />
        </FrameLayout>

        <!-- Search Bar -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/greyforboxes2"
            android:hint="Search Anything"
            android:padding="12dp" />

        <!-- Featured Banner -->
        <ImageView
            android:id="@+id/featuredBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hero2"
            android:background="@drawable/rounded_background"
            />


        <!-- Select Your Goal -->
        <TextView
            android:id="@+id/selectGoalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="SELECT YOUR GOAL"
            android:textColor="@color/primaryColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/goalButtonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Goal Buttons -->
                <Button
                    android:id="@+id/loseWeightButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/buttonColor"
                    android:text="Lose Weight"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/gainWeightButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/greyforboxes2"
                    android:text="Gain Weight"
                    android:textColor="@color/accentColor" />

                <Button
                    android:id="@+id/bodyBuildingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/greyforboxes2"
                    android:text="Body Building"
                    android:textColor="@color/accentColor"
                    android:textColorLink="@color/accentColor" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Category Section -->
        <TextView
            android:id="@+id/categoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="CATEGORY"
            android:textColor="@color/primaryColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <!-- Category Box 1 -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/yoga" />

            <!-- Category Box 2 -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/gym" />

            <!-- Category Box 3 -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:contentDescription="Category 3"
                android:scaleType="centerCrop"
                android:src="@drawable/cardio" />
        </LinearLayout>

        <!-- Popular Exercise Section -->
        <TextView
            android:id="@+id/popularExerciseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="POPULAR EXERCISE"
            android:textColor="@color/primaryColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Popular Exercise Box 1 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"

                android:contentDescription="Popular Exercise 1"
                android:scaleType="centerCrop"
                android:src="@drawable/stretching_arms" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="Women Stretching Arms"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp" />

            <!-- Popular Exercise Box 2 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Popular Exercise 2"
                android:scaleType="centerCrop"
                android:src="@drawable/athlete_practices" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="Athlete Practices"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp" />

            <!-- Popular Exercise Box 3 -->
        </LinearLayout>

        <!-- Meal Plans Section -->
        <TextView
            android:id="@+id/mealPlanText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Additonal Exercise"
            android:textColor="@color/primaryColor"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <!-- Meal Plan Box 1 -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:contentDescription="Meal Plan 1"
                android:scaleType="centerCrop"
                android:src="@drawable/jumping_rope" />

            <!-- Meal Plan Box 2 -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:contentDescription="Meal Plan 2"
                android:scaleType="centerCrop"
                android:src="@drawable/sitting" />

            <!-- Meal Plan Box 3 -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:contentDescription="Meal Plan 3"
                android:scaleType="centerCrop"
                android:src="@drawable/sitting2" />
        </LinearLayout>

        <!-- Additional Exercise Section -->
        <TextView
            android:id="@+id/additionalExerciseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Meal Plans"
            android:textColor="@color/primaryColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Additional Exercise Box 1 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="Additional Exercise 1"
                android:scaleType="centerCrop"
                android:src="@drawable/meals1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="Meal Plan 1"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp" />

            <!-- Additional Exercise Box 2 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="Additional Exercise 2"
                android:scaleType="centerCrop"
                android:src="@drawable/meals2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="Meal Plan 2"
                android:textColor="@color/secondaryColor"
                android:textSize="12sp" />


            <!-- Additional Exercise Box 3 -->
        </LinearLayout>
    </LinearLayout>

</ScrollView>


