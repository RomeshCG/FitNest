<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundpage"
        android:backgroundTint="@color/backgroundpage"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title Section -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="MEAL PLAN"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <!-- Date Section -->
        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="January 1970"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- Calendar Section -->
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:firstDayOfWeek="2"
            android:maxDate="12/31/2100" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@color/secondaryColor" />

        <!-- Meal Plans Section -->
        <TextView
            android:id="@+id/mealPlansText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Meal Plans"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- Meal Plan 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mealPlan1Image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Meal Plan 1"
                android:scaleType="centerCrop"
                android:src="@drawable/greenchicken" />

            <TextView
                android:id="@+id/mealPlan1Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Grilled Chicken, Brown Rice \n Protein: 30g | Carbs: 45g"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Meal Plan 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mealPlan2Image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Meal Plan 2"
                android:scaleType="centerCrop"
                android:src="@drawable/oatsbananas" />

            <TextView
                android:id="@+id/mealPlan2Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Oats, Bananas, Almond Milk \nFiber: 6g | Green: 2.0 grams"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Meal Plan 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mealPlan3Image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Meal Plan 3"
                android:scaleType="centerCrop"
                android:src="@drawable/salmonquinoaavocado" />

            <TextView
                android:id="@+id/mealPlan3Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salmon, Quinoa, Avocado \nOmega-3: High | Fiber: 4.5g"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mealPlan4Image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Meal Plan 4"
                android:scaleType="centerCrop"
                android:src="@drawable/greekyogurtberrieshoney" />

            <TextView
                android:id="@+id/mealPlan4Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Greek Yogurt, Berries, Honey \nProbiotic: Yes | Green: 1.2 grams"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mealPlan5Image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Meal Plan 5"
                android:scaleType="centerCrop"
                android:src="@drawable/boiled_eggswholewheattoast" />

            <TextView
                android:id="@+id/mealPlan5Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Boiled Eggs, Whole Wheat Toast \nProtein: 15g | Carbs: 20g"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Bottom Section (Already Created) -->
        <!-- Add your bottom navigation bar here if needed -->

    </LinearLayout>
</ScrollView>